<div>
    <h1>Documentales</h1>

    <div class="grid"> 
        <%= form_with url: documentaries_search_path, method: :get, local: true do |form| %>
            <button class="secondary"> <%= link_to "Volver", root_path %> </button>
            <button class="secondary"> <%= link_to "Listar", documentaries_index_path %> </button>
            <button class="secondary"> <%= link_to "Crear",  documentaries_new_path %> </button>
            <button class="secondary"> <%= link_to "Buscar", documentaries_search_path %> </button>
            <%= form.label :query, "Buscar pelÃ­cula o texto" %>
            <%= form.text_field :query, required: true, class: "input-width-search" %>
            <%= form.submit "Buscar", class: "input-width-search" %>
        <% end %>
    </div>
    <br>

        <% if @documentaries.any? %>
        <table>
            <thead data-theme="light">
                <tr>
                    <th class="col-medium" scope="col">Nombre</th>
                    <th class="col-medium" scope="col">Director</th>
                    <th class="col-large"  scope="col">Sinopsis</th>
                </tr>
            </thead>
            <tbody class="striped">
                <% @documentaries.each do |documentary| %>
                    <tr>
                        <td class="col-medium" scope="row"> <%= documentary.name %> </td>
                        <td class="col-medium"> <%= documentary.director %> </td>
                        <td class="col-large">  <%= documentary.synopsis %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <br>
        <br>
    <% else %>
        <p></p>
    <% end %>

</div>
