<div>
    <h1>Películas</h1>

    <div class="grid"> 
        <%= form_with url: movies_search_path, method: :get, local: true do |form| %>
            <button class="secondary"> <%= link_to "Volver", root_path %> </button>
            <button class="secondary"> <%= link_to "Listar", movies_index_path %> </button>
            <button class="secondary"> <%= link_to "Crear",  movies_new_path %> </button>
            <button class="secondary"> <%= link_to "Borrar", movies_remove_path %> </button>
            <button class="secondary"> <%= link_to "Buscar", movies_search_path %> </button>
            <%= form.label :query, "Buscar película o texto" %>
            <%= form.text_field :query, required: true, class: "input-width-search" %>
            <%= form.submit "Buscar", class: "input-width-search" %>
        <% end %>
    </div>
    <br>

    <% if @movie.errors.any? %>
        <div>
            <h4><%= pluralize(@movie.errors.count, "Error") %> - Id</h4>
            <ul>
                <% @movie.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <br>
    <% end %>

    <%= form_with model: @movie, method: :delete, local: true, data: { turbo: false } do |form| %>
        <div class="col-medium">
            <%= form.label :id, "Id (number)" %>
            <%= form.text_field :id, required: true, class: "input-width-number", min: 1 %>
        </div>
        <div class="col-medium">
            <%= form.submit "Eliminar", class: "input-width-number"  %>
        </div>
    <% end %>
</div>
<br>

